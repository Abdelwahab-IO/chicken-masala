<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cuisineCard"
    android:layout_width="125dp"
    android:layout_height="150dp"
    android:layout_marginEnd="@dimen/small_Size"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/cuisineImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/burgur"
        android:contentDescription="@string/category_image"
        android:foreground="@drawable/cuisine_gradiant"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/cuisineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="Chinese" />

    <TextView
        android:id="@+id/cuisinesRecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="15 items" />
</androidx.cardview.widget.CardView>


