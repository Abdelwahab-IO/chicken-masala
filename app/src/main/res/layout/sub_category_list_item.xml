<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_normal"
    android:layout_marginVertical="@dimen/margin_small"
    android:background="@drawable/subcategory_list_item_layout_background"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_meal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/subcategory_list_item_image_background"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/image_sub_category"
            android:contentDescription="@string/meal" />

        <ImageView
            android:id="@+id/image_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/subcategory_list_item_favourite_background"
            android:padding="3dp"
            android:src="@drawable/baseline_favorite_border_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:textColor="#512C08"
        android:textSize="16sp"
        tools:text="Kofta" />

    <TextView
        android:id="@+id/text_prepare_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/subcategory_list_item_time_background"
        android:drawablePadding="5dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/subcategory_list_item_time_icon"
        app:drawableTint="#512C08"
        tools:text="15 min" />

</LinearLayout>