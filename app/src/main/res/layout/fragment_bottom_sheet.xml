<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:backgroundTint="@color/card_background"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.BottomSheetFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        android:src="@drawable/drag"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/search_filter"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/main_title"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="24dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_title"
        android:text="@string/ingredient_count"
        android:textSize="@dimen/body_text"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="8dp"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/ingredientchipgroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/alling"
                style="@style/Widget.App.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="All ingredients" />

            <com.google.android.material.chip.Chip
                android:id="@+id/fiveing"
                style="@style/Widget.App.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="under 5 ingredient" />

            <com.google.android.material.chip.Chip
                android:id="@+id/tening"
                style="@style/Widget.App.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="under 10 ingredient" />

            <com.google.android.material.chip.Chip
                android:id="@+id/fifteening"
                style="@style/Widget.App.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="under 15 ingredient" />

            <com.google.android.material.chip.Chip
                android:id="@+id/twentying"
                style="@style/Widget.App.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="under 20 ingredient" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:textColor="@color/main_title"
        android:text="Cooking time"
        android:textSize="@dimen/body_text"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="8dp"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <com.google.android.material.chip.ChipGroup
            android:layout_width="0dp"
            android:id="@+id/timechipgroup"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            >
            <com.google.android.material.chip.Chip
                android:id="@+id/alltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Time"
                android:checked="true"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/fivemin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="under 5 min"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/tenmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="under 10 min"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/fifteenmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="under 15 min"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/twentymin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="under 20 min"
                style="@style/Widget.App.Chip"
                />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    
    <Button
        android:layout_width="match_parent"
        android:id="@+id/show"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="SHOW RESULT"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/main_title"
        style="?attr/materialButtonOutlinedStyle"
        />




</LinearLayout>