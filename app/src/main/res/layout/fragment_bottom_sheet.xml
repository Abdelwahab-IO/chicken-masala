<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:backgroundTint="@color/card_background"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.BottomSheetFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        android:src="@drawable/drag"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/search_filter"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/main_title"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="24dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_title"
        android:text="@string/ingredient_count"
        android:textSize="@dimen/body_text"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="8dp"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <com.google.android.material.chip.ChipGroup
            android:layout_width="0dp"
            android:id="@+id/ingredientchipgroup"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All ingredients"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="under 5 ingredient"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 ingredient"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 ingredient"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more than 15 ingredient"
                style="@style/Widget.App.Chip"
                />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:textColor="@color/main_title"
        android:text="Cooking time"
        android:textSize="@dimen/body_text"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="8dp"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <com.google.android.material.chip.ChipGroup
            android:layout_width="0dp"
            android:id="@+id/timechipgroup"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Time"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="under 5 min"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 min"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 min"
                style="@style/Widget.App.Chip"
                />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more than 15 min"
                style="@style/Widget.App.Chip"
                />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    
    <Button
        android:layout_width="match_parent"
        android:id="@+id/show"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Show 74 result"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/main_title"
        style="?attr/materialButtonOutlinedStyle"
        />




</LinearLayout>