<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AboutFragment">


    <LinearLayout
        android:id="@+id/appbar_about"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/image_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            android:contentDescription="@string/about_text"
            app:srcCompat="@drawable/arrow_back" />

        <TextView
            android:id="@+id/text_title_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_text"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar_about">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/image_about"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/about_image"
                app:roundPercent="0.1" />

            <TextView
                android:id="@+id/text_chefs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="@string/chefs"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:id="@+id/scroll_chefs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_sanjeev"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="0.6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/chef1"
                            app:shapeAppearanceOverlay="@style/circle"
                            app:strokeColor="@color/premium_color"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/sanjeev"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_vikas"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="0.6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/chef2"
                            app:shapeAppearanceOverlay="@style/circle"
                            app:strokeColor="@color/premium_color"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/vikas"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_ranveer"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="0.6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/chef3"
                            app:shapeAppearanceOverlay="@style/circle"
                            app:strokeColor="@color/premium_color"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/ranveer"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_saransh"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="0.6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/chef4"
                            app:shapeAppearanceOverlay="@style/circle"
                            app:strokeColor="@color/premium_color"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/saransh"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_madhur"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="0.6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/chef5"
                            app:shapeAppearanceOverlay="@style/circle"
                            app:strokeColor="@color/premium_color"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/madhur"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>


            </HorizontalScrollView>

            <TextView
                android:id="@+id/text_title_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:text="@string/history"
                android:textColor="@color/text_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/text_content_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:breakStrategy="balanced"
                android:elegantTextHeight="true"
                android:lineHeight="@dimen/content_history"
                android:text="@string/history_text"
                android:textAlignment="textStart"
                android:textColor="@color/text_color"
                android:textSize="14sp" />


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>