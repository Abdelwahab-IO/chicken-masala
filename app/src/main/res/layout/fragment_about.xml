<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AboutFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            android:contentDescription="@string/about_text"
            app:srcCompat="@drawable/arrow_back" />

        <TextView
            android:id="@+id/title_about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_text"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/about_image"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/about_image"
                app:roundPercent="0.1" />

            <TextView
                android:id="@+id/chefs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/chefs"
                android:textColor="@color/text_color"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/sanjeev_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:padding="0.6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chef1"
                        app:shapeAppearanceOverlay="@style/circle"
                        app:strokeColor="@color/premium_color"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/sanjeev"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/vikas_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:padding="0.6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chef2"
                        app:shapeAppearanceOverlay="@style/circle"
                        app:strokeColor="@color/premium_color"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/vikas"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ranveer_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:padding="0.6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chef3"
                        app:shapeAppearanceOverlay="@style/circle"
                        app:strokeColor="@color/premium_color"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/ranveer"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/saransh_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:padding="0.6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chef4"
                        app:shapeAppearanceOverlay="@style/circle"
                        app:strokeColor="@color/premium_color"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/saransh"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/madhur_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:padding="0.6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chef5"
                        app:shapeAppearanceOverlay="@style/circle"
                        app:strokeColor="@color/premium_color"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/madhur"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/history_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:text="@string/history_text"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/text_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/content_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:elegantTextHeight="true"
                android:lineHeight="21sp"
                android:text="@string/history_text1"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="textStart"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                 />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/history_image1"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/history_image1"
                app:roundPercent="0.3" />

            <TextView
                android:id="@+id/content_textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:elegantTextHeight="true"
                android:lineHeight="21sp"
                android:text="@string/history_text2"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="textStart"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/history_image2"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/history_image2"
                app:roundPercent="0.3" />

            <TextView
                android:id="@+id/content_textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:elegantTextHeight="true"
                android:lineHeight="21sp"
                android:text="@string/history_text3"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="textStart"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/history_image3"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/history_image3"
                app:roundPercent="0.3" />

            <TextView
                android:id="@+id/content_textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:elegantTextHeight="true"
                android:lineHeight="21sp"
                android:text="@string/history_text4"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="textStart"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/history_image4"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/history_image4"
                app:roundPercent="0.3" />

            <TextView
                android:id="@+id/content_textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:elegantTextHeight="true"
                android:lineHeight="21sp"
                android:text="@string/history_text5"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="textStart"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/history_imageView5"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/history_image5"
                app:roundPercent="0.3" />


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>