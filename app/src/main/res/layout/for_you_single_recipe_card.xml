<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ForYouCard"
    android:layout_width="257dp"
    android:layout_height="225dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/category_image"
        android:foreground="@drawable/single_card_image_gredient"
        android:scaleType="centerCrop"
        android:src="@drawable/burgur" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/small_Size"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RecipeNameTitle"
            style="@style/TextStyle.ForYouTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginBottom="@dimen/small_Size"
            android:text="@string/Recipe_Name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_under20min_recipe_card_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/small_Size">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@drawable/cuisine_icon"
                    android:src="@drawable/cuisine_icon" />

                <View
                    android:layout_width="@dimen/tiny_Size"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/single_cuisine"
                    style="@style/RegularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Cuisine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_Size"
                android:background="@drawable/home_under20min_recipe_card_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/small_Size">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@drawable/cuisine_icon"
                    android:src="@drawable/cooking_time" />

                <View
                    android:layout_width="@dimen/tiny_Size"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/single_time"
                    style="@style/RegularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/cooking_time" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>