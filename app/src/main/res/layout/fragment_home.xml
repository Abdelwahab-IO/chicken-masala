<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- logo -->
    <TextView
        android:id="@+id/text_logo"
        style="@style/TextStyle.SpaceHorizontal.SpaceTop.LogoTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logo_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- space_16 -->
    <View
        android:id="@+id/space_16"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/medium_Size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_logo" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <!-- Cuisines title -->
            <LinearLayout
                android:id="@+id/label_cuisines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/medium_Size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space_16">

                <TextView
                    android:id="@+id/text_title_cuisines"
                    style="@style/TextStyle.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Cuisines_title" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- TODO: add the onclick action with the functionality-->
                <Button
                    android:id="@+id/text_cuisines_view_all"
                    style="@style/Widget.AppCompat.Button.Borderless.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:text="@string/View_All_title"
                    android:textAllCaps="false" />


            </LinearLayout>

            <!-- cuisines chips -->
            <HorizontalScrollView
                android:id="@+id/scroll_view_cuisines_chip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_cuisines">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_cuisines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/medium_Size"
                    android:paddingEnd="0dp"
                    app:chipSpacingHorizontal="0dp"
                    app:chipSpacingVertical="0dp"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        style="@style/SingleChip.SelectedChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selected_chip_sample" />

                    <com.google.android.material.chip.Chip
                        style="@style/SingleChip.UnSelectedChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unSelected_chip_sample" />

                    <com.google.android.material.chip.Chip
                        style="@style/SingleChip.UnSelectedChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unSelected_chip_sample" />

                    <com.google.android.material.chip.Chip
                        style="@style/SingleChip.UnSelectedChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unSelected_chip_sample" />


                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <!-- space_16 -->
            <View
                android:id="@+id/space_16_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/medium_Size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scroll_view_cuisines_chip" />

            <!-- For You title -->
            <LinearLayout
                android:id="@+id/list_for_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/medium_Size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space_16_1">

                <TextView
                    android:id="@+id/text_title_for_you"
                    style="@style/TextStyle.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ForYou_title" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- TODO: add the onclick action with the functionality-->
                <Button
                    android:id="@+id/text_view_all_for_you"
                    style="@style/Widget.AppCompat.Button.Borderless.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/View_All_title" />

            </LinearLayout>

            <!-- space_8 -->
            <View
                android:id="@+id/space_8_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_Size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_for_you" />

            <!-- Single Recipe Card -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_for_you"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_Size"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space_8_2"
                tools:listitem="@layout/custome_recipe_card" />

            <!-- space_16 -->
            <View
                android:id="@+id/space_16_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/medium_Size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_for_you" />

            <!-- under 20 min title -->
            <LinearLayout
                android:id="@+id/list_under_20_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/medium_Size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space_16_2">

                <TextView
                    android:id="@+id/text_under_20_min"
                    style="@style/TextStyle.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Under20MinTitle" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- TODO: add the onclick action with the functionality-->
                <Button
                    android:id="@+id/text_view_all_under_20_min"
                    style="@style/Widget.AppCompat.Button.Borderless.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/View_All_title" />

            </LinearLayout>

            <!-- space_8 -->
            <View
                android:id="@+id/space_8_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_Size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_under_20_min" />

            <!-- Single Recipe Card -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_under_20_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_Size"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space_8_3"
                tools:listitem="@layout/custome_recipe_card" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>