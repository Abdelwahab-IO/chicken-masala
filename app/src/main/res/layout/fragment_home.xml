<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- logo -->
    <TextView
        android:id="@+id/logo"
        style="@style/TextStyle.SpaceHorizontal.SpaceTop.LogoTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logo_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/medium_Size"
        android:layout_marginTop="@dimen/medium_Size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <!-- Cuisines title -->
            <LinearLayout
                android:id="@+id/CuisinesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/medium_Size"
                android:gravity="center">

                <TextView
                    android:id="@+id/CuisinesTitle"
                    style="@style/TextStyle.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Cuisines_title" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- TODO: add the onclick action with the functionality-->
                <Button
                    android:id="@+id/CuisinesViewAllSubtitle"
                    style="@style/Widget.AppCompat.Button.Borderless.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:text="@string/View_All_title"
                    android:textAllCaps="false" />


            </LinearLayout>

            <!-- cuisines chips -->
            <HorizontalScrollView
                android:id="@+id/cuisines_chip_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CuisinesLabel">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cuisines_chip_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="0dp"
                    app:chipSpacingHorizontal="0dp"
                    app:chipSpacingVertical="0dp"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        style="@style/SingleChip.SelectedChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selected_chip_sample" />

                    <com.google.android.material.chip.Chip
                        style="@style/SingleChip.UnSelectedChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unSelected_chip_sample" />

                    <com.google.android.material.chip.Chip
                        style="@style/SingleChip.UnSelectedChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unSelected_chip_sample" />

                    <com.google.android.material.chip.Chip
                        style="@style/SingleChip.UnSelectedChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unSelected_chip_sample" />


                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <!-- For You title -->
            <LinearLayout
                android:id="@+id/ForYouLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_Size"
                android:layout_marginEnd="@dimen/medium_Size"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cuisines_chip_scroll_view">

                <TextView
                    android:id="@+id/ForYouTitle"
                    style="@style/TextStyle.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ForYou_title" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- TODO: add the onclick action with the functionality-->
                <Button
                    android:id="@+id/ForYouViewAllSubtitle"
                    style="@style/Widget.AppCompat.Button.Borderless.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/View_All_title" />

            </LinearLayout>

            <!-- Single For you Recipe Card -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/for_you_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_Size"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ForYouLabel"
                tools:listitem="@layout/home_recipe_card" />

            <!-- under 20 min title -->
            <LinearLayout
                android:id="@+id/Under20MinLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_Size"
                android:layout_marginEnd="@dimen/medium_Size"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/for_you_recycler_view">

                <TextView
                    android:id="@+id/Under20MinTitle"
                    style="@style/TextStyle.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Under20MinTitle" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- TODO: add the onclick action with the functionality-->
                <Button
                    android:id="@+id/Under20MinSubtitle"
                    style="@style/Widget.AppCompat.Button.Borderless.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/View_All_title" />

            </LinearLayout>

            <!-- Single under 20 min Recipe Card -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/under_20min_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_Size"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Under20MinLabel"
                tools:listitem="@layout/custome_recipe_card" />

            <!-- under 5 ingredient meal title -->
            <LinearLayout
                android:id="@+id/under5ingredientLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_Size"
                android:layout_marginEnd="@dimen/medium_Size"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/under_5ingredient_recycler_view">

                <TextView
                    android:id="@+id/under5ingredientTitle"
                    style="@style/TextStyle.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Under5ingredientTitle" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- TODO: add the onclick action with the functionality-->
                <Button
                    android:id="@+id/under5ingredientSubtitle"
                    style="@style/Widget.AppCompat.Button.Borderless.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/View_All_title" />

            </LinearLayout>

            <!-- Single under 5 ingredient Recipe Card -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/under_5ingredient_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/small_Size"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/under5ingredientLabel"
                tools:listitem="@layout/custome_recipe_card" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>