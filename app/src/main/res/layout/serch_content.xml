<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_back_ground"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/kofta_image"
                android:layout_width="@dimen/card_image_width"
                android:layout_height="@dimen/card_image_height"
                style="@style/cardImage"
                android:src="@drawable/kofta"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/kofta_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/kofta"
                style="@style/cardTittleText"
                app:layout_constraintStart_toEndOf="@+id/kofta_image"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cooking_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/cooking"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kofta_image"
                app:layout_constraintTop_toBottomOf="@+id/kofta_text" />

            <TextView
                android:id="@+id/cooking_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/_2_00"
                style="@style/cardBodyText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cooking_icon"
                app:layout_constraintTop_toBottomOf="@+id/kofta_text" />

            <ImageView
                android:id="@+id/favourite_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/favourite_fill"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_back_ground"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/burger_image"
                android:layout_width="@dimen/card_image_width"
                android:layout_height="@dimen/card_image_height"
                style="@style/cardImage"
                android:src="@drawable/burgur"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/burger_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/burger"
                style="@style/cardTittleText"
                app:layout_constraintStart_toEndOf="@+id/burger_image"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/burger_cooking_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/cooking"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/burger_image"
                app:layout_constraintTop_toBottomOf="@+id/burger_text" />

            <TextView
                android:id="@+id/burger_cooking_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/_2_00"
                style="@style/cardBodyText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/burger_cooking_icon"
                app:layout_constraintTop_toBottomOf="@+id/burger_text" />

            <ImageView
                android:id="@+id/burger_favourite_fill_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/favourite_fill"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_back_ground"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/basboosa_image"
                android:layout_width="@dimen/card_image_width"
                android:layout_height="@dimen/card_image_height"
                style="@style/cardImage"
                android:src="@drawable/basboosa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/basboosa_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/basboosa"
                style="@style/cardTittleText"
                app:layout_constraintStart_toEndOf="@+id/basboosa_image"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/basboosa_cooking_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/cooking"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/basboosa_image"
                app:layout_constraintTop_toBottomOf="@+id/basboosa_text" />

            <TextView
                android:id="@+id/basboosa_cooking_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/_2_00"
                style="@style/cardBodyText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/basboosa_cooking_icon"
                app:layout_constraintTop_toBottomOf="@+id/basboosa_text" />

            <ImageView
                android:id="@+id/basboosa_favourite_fill_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/favourite_fill"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_back_ground"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/maftool_image"
                android:layout_width="@dimen/card_image_width"
                android:layout_height="@dimen/card_image_height"
                style="@style/cardImage"
                android:src="@drawable/maftool"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/maftool_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/maftool"
                style="@style/cardTittleText"
                app:layout_constraintStart_toEndOf="@+id/maftool_image"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/maftool_cooking_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/cooking"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/maftool_image"
                app:layout_constraintTop_toBottomOf="@+id/maftool_text" />

            <TextView
                android:id="@+id/maftool_cooking_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/_2_00"
                style="@style/cardBodyText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/maftool_cooking_icon"
                app:layout_constraintTop_toBottomOf="@+id/maftool_text" />

            <ImageView
                android:id="@+id/maftool_favourite_fill_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/favourite_fill"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_back_ground"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/fourth_image"
                android:layout_width="@dimen/card_image_width"
                android:layout_height="@dimen/card_image_height"
                style="@style/cardImage"
                android:src="@drawable/maftool"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fourth_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/basboosa"
                style="@style/cardTittleText"
                app:layout_constraintStart_toEndOf="@+id/fourth_image"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fourth_cooking_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/cooking"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fourth_image"
                app:layout_constraintTop_toBottomOf="@+id/fourth_text" />

            <TextView
                android:id="@+id/fourth_cooking_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/_2_00"
                style="@style/cardBodyText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fourth_cooking_icon"
                app:layout_constraintTop_toBottomOf="@+id/fourth_text" />

            <ImageView
                android:id="@+id/fourth_favourite_fill_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/favourite_fill"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>