
<resources>
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/view_pager_activated</item>
        <item name="colorOnPrimary">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sub_card_background</item>
        <item name="colorSecondaryVariant">@color/view_pager_activated</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:windowActionBar">true</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipIconTint">@color/main_title</item>
        <item name="chipBackgroundColor">@color/checked_chip</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">#49454F</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIcon">@drawable/baseline_check_24</item>
    </style>

</resources>
