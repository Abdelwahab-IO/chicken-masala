<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChickenMasala" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>


    <style name="SpaceHorizontal">
        <item name="android:layout_marginStart">@dimen/medium_Size</item>
        <item name="android:layout_marginEnd">@dimen/medium_Size</item>
    </style>

    <style name="SpaceTop">
        <item name="android:layout_marginTop">@dimen/medium_Size</item>
    </style>


    <style name="TextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="TextStyle.SpaceHorizontal" />

    <style name="TextStyle.SpaceHorizontal.SpaceTop" />


    <style name="TextStyle.SpaceHorizontal.SpaceTop.LogoTextStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/headline_text_size</item>
        <item name="android:layout_marginTop">@dimen/medium_Size</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_Size</item>

    </style>

    <style name="TextStyle.Title" />

    <style name="Widget.AppCompat.Button.Borderless.Subtitle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:textSize">@dimen/small_text_size</item>

    </style>


    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/indicator_color</item>
    </style>

</resources>