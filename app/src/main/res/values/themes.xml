<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Create a new style and name it splashScreenTheme and add the following code-->
    <style name="splashScreenTheme" parent="Theme.Material3.Light.NoActionBar">
<!--        <item name="android:windowBackground">@drawable/splash_image</item>-->
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="chipStyle">@style/SingleChip</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="circle">
        <item name="cornerSize">32dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="cardImage">
        <item name="shapeAppearanceOverlay">@style/circleImageView</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="cardTittleText">
        <item name="android:textSize">@dimen/tittle_text</item>
        <item name="android:textColor">@color/primary_brand</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="cardBodyText">
        <item name="android:textSize">@dimen/body_text</item>
        <item name="android:textColor">@color/primary_brand</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="SpaceHorizontal">
        <item name="android:layout_marginStart">@dimen/medium_Size</item>
        <item name="android:layout_marginEnd">@dimen/medium_Size</item>
    </style>

    <style name="SpaceTop">
        <item name="android:layout_marginTop">@dimen/medium_Size</item>
    </style>


    <style name="TextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="RegularTextStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle.SpaceHorizontal" />

    <style name="TextStyle.SpaceHorizontal.SpaceTop" />


    <style name="TextStyle.Title">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle.ForYouTitle">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/for_you_recipe_name</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="Widget.AppCompat.Button.Borderless.Subtitle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SingleChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SingleChip.SelectedChip">
        <item name="chipBackgroundColor">@color/indicator_color</item>
    </style>

    <style name="SingleChip.UnSelectedChip">
        <item name="chipBackgroundColor">@color/transparent</item>
    </style>

    <style name="RecipeCard"></style>

    <style name="Widget.Material3.BottomNavigationView.style" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/indicator_color</item>
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="itemTextColor">@drawable/nav_item_text_color</item>
        <item name="itemIconTint">@drawable/nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/indicator_color</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/cardCustomCorners</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="cardCustomCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>


</resources>