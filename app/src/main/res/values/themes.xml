<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChickenMasala" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/indicator_color</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="cardImage">
        <item name="shapeAppearanceOverlay">@style/circleImageView</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="cardTittleText">
        <item name="android:textSize">@dimen/tittle_text</item>
        <item name="android:textColor">@color/primary_brand</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="cardBodyText">
        <item name="android:textSize">@dimen/body_text</item>
        <item name="android:textColor">@color/primary_brand</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


</resources>